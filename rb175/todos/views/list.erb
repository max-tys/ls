<%# List name, todos, and button to edit list %>

<% if completed?(@list) %>
<section id="todos" class="complete">
<% else %>
<section id="todos">
<% end %>
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li>
        <form action="/lists/<%= @list_id %>/complete_all" method="post">
          <button class="check" type="submit">Complete All</button>
        </form>
      </li>
      <li>
        <a class="edit" href="/lists/<%= @list_id %>/edit">Edit List</a>
      </li>
    </ul>
  </header>

  <ul>
    <% @list[:todos].each_with_index do |todo, todo_id| %>
      <% if todo[:completed] %>
        <li class="complete">
      <% else %>
        <li>
      <% end %>
        <%# Checkbox for individual todo %>
        <form action="/lists/<%= @list_id %>/todos/<%= todo_id %>" method="post" class="check">
          <input type="hidden" name="completed" value="<%= !todo[:completed] %>" />
          <button type="submit">Complete</button>
        </form>

        <%# Todo name %>
        <h3><%= todo[:name] %></h3>

        <%# Delete todo %>
        <form action="/lists/<%= @list_id %>/todos/<%= todo_id %>/delete" method="post" class="delete">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% end %>
  </ul>
</section>

<%# Form to add a new todo item %>
<form action="/lists/<%= @list_id %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" placeholder="Something to do" type="text" value="<%= params[:todo] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>

<%# Header links %>
<% content_for :header_links do %>
  <a class="list" href="/">All Lists</a>
<% end %>
