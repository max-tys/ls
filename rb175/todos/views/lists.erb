<ul id="lists">
  <% @lists.each_with_index do |list, idx| %>
    <% if completed?(list) %>
    <li class="complete">
    <% else %>
    <li>
    <% end %>
      <a href='lists/<%= idx %>'>
        <h2><%= list[:name] %></h2>
        <p><%= completed_count(list) %> / <%= list[:todos].size %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="lists/new">New list</a>
<% end %>
