<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul><li>
      <a class="edit" href="/lists/<%= @id %>/rename">
        Rename List
      </a>
    </li></ul>
  </header>
</section>

<% content_for :header_links do %>
  <a href="/">All Lists</a>
<% end %>

<form action="/lists/<%= @id %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" placeholder="Todo text" type="text" value="">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>